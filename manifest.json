{
  "manifest_version": 3,
  "name": "YouTube Auto Pause/Resume",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ]
}

  